<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>pers.web.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/courseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>pers.web.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/studentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertServlet</servlet-name>
        <servlet-class>pers.web.InsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertServlet</servlet-name>
        <url-pattern>/insertServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeptServlet</servlet-name>
        <servlet-class>pers.web.DeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptServlet</servlet-name>
        <url-pattern>/deptServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SqlServlet</servlet-name>
        <servlet-class>pers.web.SqlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SqlServlet</servlet-name>
        <url-pattern>/sqlServlet</url-pattern>
    </servlet-mapping>
</web-app>